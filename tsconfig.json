{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"target": "ES6",
		"module": "ESNext",
		"jsx": "react",
		"moduleResolution": "Node",
		"outDir": "./types",
		"rootDir": "./src"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "scripts"]
}
