{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ESNext"
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*.ts"
	]
}
